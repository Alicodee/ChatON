<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.SignUp"
    android:orientation="vertical"
    android:background="@color/accent"
    android:weightSum="4">
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:onClick="goToSplash"
            android:src="@drawable/ic_home"
            android:layout_margin="6dp"/>
        <TextView
            android:id="@+id/create_account_text"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE ACCOUNT"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"

            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4"
        >
      <LinearLayout
          android:layout_weight="2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:weightSum="3">
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@drawable/custom_rec"
              android:weightSum="4"
              android:layout_marginBottom="12dp"
              android:layout_marginStart="36dp"
              android:layout_marginEnd="36dp">
              <ImageView
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:src="@drawable/ic_name"/>
              <EditText
                  android:id="@+id/signUpName"
                  android:layout_weight="3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:hint="Name"
                  android:textColor="#ffffff"
                  android:nextFocusDown="@id/signUpEmail"
                  android:layout_gravity="center"
                  android:textColorHint="#ffffff"
                  android:textSize="15sp"
                  android:background="@android:color/transparent"/>
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@drawable/custom_rec"
              android:weightSum="4"
              android:layout_marginBottom="12dp"
              android:layout_marginStart="36dp"
              android:layout_marginEnd="36dp">
              <ImageView
                  android:layout_gravity="center"
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_email"/>
              <EditText
                  android:id="@+id/signUpEmail"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:hint="Email"
                  android:textColorHint="#ffffff"
                  android:textSize="15sp"
                  android:nextFocusDown="@id/signUpPass"
                  android:inputType="textEmailAddress"
                  android:background="@android:color/transparent"
                  android:layout_gravity="center"
                  android:layout_weight="3"
                  android:textColor="#ffffff"/>
          </LinearLayout>
          <LinearLayout
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@drawable/custom_rec"
              android:layout_marginBottom="12dp"
              android:layout_marginStart="36dp"
              android:layout_marginEnd="36dp"
              android:weightSum="4">
              <ImageView
                  android:layout_weight="1"
                  android:layout_gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_lock"/>
              <EditText
                  android:id="@+id/signUpPass"
                  android:layout_weight="3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:hint="Password"
                  android:layout_gravity="center"
                  android:textColorHint="#ffffff"
                  android:inputType="textPassword"
                  android:textColor="#ffffff"
                  android:textSize="18sp"
                  android:background="@android:color/transparent"/>

          </LinearLayout>
      </LinearLayout>
        <Button
            android:layout_weight="0.25"
            android:id="@+id/signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#ffcccc"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:onClick="createAccount"
            android:background="@drawable/primary_dark_ripple"
            android:layout_marginTop="34dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"/>
        <TextView
            android:id="@+id/loginText"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have a ChatON account? Login Me"
            android:textColor="#ffffff"
            android:gravity="center|bottom"
            android:paddingBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="goBackToMain"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"/>




    </LinearLayout>


</LinearLayout>